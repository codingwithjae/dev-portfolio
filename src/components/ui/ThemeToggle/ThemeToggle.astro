<button
    id="theme-toggle"
    class="relative w-12 h-6 rounded-full bg-secondary border border-border-base cursor-pointer outline-none transition-colors duration-300 opacity-0 pointer-events-none"
    aria-label="Toggle Theme"
>
    <div
        id="theme-toggle-dot"
        class="absolute top-1 left-1 w-4 h-4 rounded-full bg-accent-hover transition-all duration-500 ease-[cubic-bezier(0.34,1.56,0.64,1)] flex items-center justify-center overflow-hidden"
    >
        <div class="relative w-full h-full flex items-center justify-center">
            <span
                id="sun-icon"
                class="absolute transition-all duration-300 opacity-0 scale-50 rotate-90 text-black"
            >
                <svg
                    class="w-[10px] h-[10px]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                >
                    <path
                        fill-rule="evenodd"
                        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                        clip-rule="evenodd"></path>
                </svg>
            </span>
            <span
                id="moon-icon"
                class="absolute transition-all duration-300 opacity-0 scale-50 -rotate-90 text-white"
            >
                <svg
                    class="w-[10px] h-[10px]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                >
                    <path
                        d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
                    ></path>
                </svg>
            </span>
        </div>
    </div>
</button>

<script>
    const themeToggle = document.getElementById("theme-toggle");
    const dot = document.getElementById("theme-toggle-dot");
    const sunIcon = document.getElementById("sun-icon");
    const moonIcon = document.getElementById("moon-icon");

    const updateUI = (theme: string) => {
        if (theme === "light") {
            dot?.classList.add("translate-x-6", "rotate-180", "bg-text-base");
            dot?.classList.remove("bg-accent");
            sunIcon?.classList.add("opacity-0", "scale-50", "rotate-90");
            sunIcon?.classList.remove("opacity-100", "scale-100", "rotate-0");
            moonIcon?.classList.add("opacity-100", "scale-100", "rotate-0");
            moonIcon?.classList.remove("opacity-0", "scale-50", "-rotate-90");
        } else {
            dot?.classList.remove(
                "translate-x-6",
                "rotate-180",
                "bg-text-base",
            );
            dot?.classList.add("bg-accent");
            sunIcon?.classList.add("opacity-100", "scale-100", "rotate-0");
            sunIcon?.classList.remove("opacity-0", "scale-50", "rotate-90");
            moonIcon?.classList.add("opacity-0", "scale-50", "-rotate-90");
            moonIcon?.classList.remove("opacity-100", "scale-100", "rotate-0");
        }
        themeToggle?.classList.remove("opacity-0", "pointer-events-none");
    };

    const initTheme = () => {
        const theme =
            document.documentElement.getAttribute("data-theme") || "light";
        updateUI(theme);
    };

    const toggleTheme = () => {
        const currentTheme =
            document.documentElement.getAttribute("data-theme");
        const newTheme = currentTheme === "light" ? "dark" : "light";

        document.documentElement.setAttribute("data-theme", newTheme);
        localStorage.setItem("theme", newTheme);
        updateUI(newTheme);
    };

    themeToggle?.addEventListener("click", toggleTheme);

    initTheme();

    const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
            if (mutation.attributeName === "data-theme") {
                const newTheme =
                    document.documentElement.getAttribute("data-theme") ||
                    "dark";
                updateUI(newTheme);
            }
        });
    });
    observer.observe(document.documentElement, { attributes: true });
</script>
